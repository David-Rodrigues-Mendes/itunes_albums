<html lang= "en">
    <div class="container">
    <div class="header">
        <div class="row">
        </div>
    </div>

    <div class="main">
        <h1>Search for your favorite albuns</h1>

        <div>
            <%= form_with url: "/album_search", method: :get do |form| %>
                <%= form.label :query, "Search for an artist or an album:" %>

                <%= form.search_field :search %>

                <%= form.submit "Search" %>
            <% end %>
        </div>        
    </div>
</html>